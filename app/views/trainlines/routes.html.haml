%body
  =render :partial => '/header', :locals => {:text => "Trainlines - the world and train routes"}
  - @routes.each do |route|
    - if route.name.nil?
      %p{:style => "padding:0.3em"}= link_to "Unnamed route", trainline_path(route.id)
    - else
      %p{:style => "padding:0.3em"}= link_to route.name, trainline_path(route.id)
  =render :partial => '/footer'